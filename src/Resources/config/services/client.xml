<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="webgriffe.sylius_active_campaign_plugin.client.active_campaign.contact"
                 class="Webgriffe\SyliusActiveCampaignPlugin\Client\ActiveCampaignResourceClient">
            <argument type="service" id="webgriffe.sylius_active_campaign_plugin.http_client.active_campaign"/>
            <argument type="service" id="webgriffe.sylius_active_campaign_plugin.serializer"/>
            <argument type="string">contact</argument>
            <argument type="string">Webgriffe\SyliusActiveCampaignPlugin\ValueObject\Response\Contact\CreateContactResponse</argument>
            <argument type="string">Webgriffe\SyliusActiveCampaignPlugin\ValueObject\Response\Contact\ListContactsResponse</argument>
            <argument type="string">Webgriffe\SyliusActiveCampaignPlugin\ValueObject\Response\Contact\UpdateContactResponse</argument>
        </service>

        <service id="webgriffe.sylius_active_campaign_plugin.client.active_campaign.connection"
                 class="Webgriffe\SyliusActiveCampaignPlugin\Client\ActiveCampaignResourceClient">
            <argument type="service" id="webgriffe.sylius_active_campaign_plugin.http_client.active_campaign"/>
            <argument type="service" id="webgriffe.sylius_active_campaign_plugin.serializer"/>
            <argument type="string">connection</argument>
            <argument type="string">Webgriffe\SyliusActiveCampaignPlugin\ValueObject\Response\Connection\CreateConnectionResponse</argument>
            <argument type="string">Webgriffe\SyliusActiveCampaignPlugin\ValueObject\Response\Connection\ListConnectionsResponse</argument>
            <argument type="string">Webgriffe\SyliusActiveCampaignPlugin\ValueObject\Response\Connection\UpdateConnectionResponse</argument>
        </service>

        <service id="webgriffe.sylius_active_campaign_plugin.client.active_campaign.ecommerce_customer"
                 class="Webgriffe\SyliusActiveCampaignPlugin\Client\ActiveCampaignResourceClient">
            <argument type="service" id="webgriffe.sylius_active_campaign_plugin.http_client.active_campaign"/>
            <argument type="service" id="webgriffe.sylius_active_campaign_plugin.serializer"/>
            <argument type="string">ecomCustomer</argument>
            <argument type="string">Webgriffe\SyliusActiveCampaignPlugin\ValueObject\Response\EcommerceCustomer\CreateEcommerceCustomerResponse</argument>
            <argument type="string">Webgriffe\SyliusActiveCampaignPlugin\ValueObject\Response\EcommerceCustomer\ListEcommerceCustomersResponse</argument>
            <argument type="string">Webgriffe\SyliusActiveCampaignPlugin\ValueObject\Response\EcommerceCustomer\UpdateEcommerceCustomerResponse</argument>
        </service>

        <service id="webgriffe.sylius_active_campaign_plugin.client.active_campaign.ecommerce_order"
                 class="Webgriffe\SyliusActiveCampaignPlugin\Client\ActiveCampaignResourceClient">
            <argument type="service" id="webgriffe.sylius_active_campaign_plugin.http_client.active_campaign"/>
            <argument type="service" id="webgriffe.sylius_active_campaign_plugin.serializer"/>
            <argument type="string">ecomOrder</argument>
            <argument type="string">Webgriffe\SyliusActiveCampaignPlugin\ValueObject\Response\EcommerceOrder\CreateEcommerceOrderResponse</argument>
            <argument type="string">Webgriffe\SyliusActiveCampaignPlugin\ValueObject\Response\EcommerceOrder\ListEcommerceOrdersResponse</argument>
            <argument type="string">Webgriffe\SyliusActiveCampaignPlugin\ValueObject\Response\EcommerceOrder\UpdateEcommerceOrderResponse</argument>
        </service>
    </services>
</container>
