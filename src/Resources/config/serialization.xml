<?xml version="1.0" encoding="UTF-8" ?>
<serializer xmlns="http://symfony.com/schema/dic/serializer-mapping"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://symfony.com/schema/dic/serializer-mapping
        https://symfony.com/schema/dic/serializer-mapping/serializer-mapping-1.0.xsd"
>
    <class name="Webgriffe\SyliusActiveCampaignPlugin\Model\ActiveCampaign\Connection">
        <attribute name="externalId" serialized-name="externalid"/>
    </class>

    <class name="Webgriffe\SyliusActiveCampaignPlugin\Model\ActiveCampaign\EcommerceCustomer">
        <attribute name="externalId" serialized-name="externalid"/>
        <attribute name="connectionId" serialized-name="connectionid"/>
    </class>

    <class name="Webgriffe\SyliusActiveCampaignPlugin\Model\ActiveCampaign\ContactTag">
        <attribute name="contactId" serialized-name="contact"/>
        <attribute name="tagId" serialized-name="tag"/>
    </class>

    <class name="Webgriffe\SyliusActiveCampaignPlugin\Model\ActiveCampaign\ContactList">
        <attribute name="listId" serialized-name="list"/>
        <attribute name="contactId" serialized-name="contact"/>
        <attribute name="sourceId" serialized-name="sourceid"/>
    </class>

    <class name="Webgriffe\SyliusActiveCampaignPlugin\ValueObject\Response\EcommerceCustomer\CreateEcommerceCustomerResponse">
        <attribute name="ecommerceCustomer" serialized-name="ecomCustomer"/>
    </class>

    <class name="Webgriffe\SyliusActiveCampaignPlugin\ValueObject\Response\EcommerceCustomer\UpdateEcommerceCustomerResponse">
        <attribute name="ecommerceCustomer" serialized-name="ecomCustomer"/>
    </class>

    <class name="Webgriffe\SyliusActiveCampaignPlugin\Model\ActiveCampaign\EcommerceOrder">
        <attribute name="externalId" serialized-name="externalid"/>
        <attribute name="connectionId" serialized-name="connectionid"/>
        <attribute name="customerId" serialized-name="customerid"/>
        <attribute name="externalCheckoutId" serialized-name="externalcheckoutid"/>
    </class>
    <class name="Webgriffe\SyliusActiveCampaignPlugin\Model\ActiveCampaign\EcommerceOrderProduct">
        <attribute name="externalId" serialized-name="externalid"/>
    </class>

    <class name="Webgriffe\SyliusActiveCampaignPlugin\ValueObject\Response\EcommerceOrder\CreateEcommerceOrderResponse">
        <attribute name="ecommerceOrder" serialized-name="ecomOrder"/>
    </class>

    <class name="Webgriffe\SyliusActiveCampaignPlugin\ValueObject\Response\EcommerceOrder\UpdateEcommerceOrderResponse">
        <attribute name="ecommerceOrder" serialized-name="ecomOrder"/>
    </class>
</serializer>
